<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/dark_choco_brown">

    <Button
        android:text="X"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/close_dialog_button"
        android:backgroundTint="@color/dark_orange"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="0dp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="360dp"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <ScrollView
            android:id="@+id/dialog_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fadeScrollbars="false"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/des_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="header"
                    android:textSize="26sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:id="@+id/des_date"
                    android:text="Date: "
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/des_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description: "
                    android:textSize="18sp"
                    android:layout_below="@+id/des_header"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </ScrollView>

        <Button
            android:text="Navigate Me From Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/route_dialog_button"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@+id/dialog_scroll_view"
            android:backgroundTint="@color/orange"
            android:drawableLeft="@drawable/icon_navigatehere" />

    </RelativeLayout>


</RelativeLayout>


