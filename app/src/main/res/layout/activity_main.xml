<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nyameh.nyameh.MainActivity"
    android:background="@drawable/bg720_1280px">

    <TextView
        android:id="@+id/title2"
        android:textSize="50sp"
        android:textAlignment="center"
        tools:ignore="UnusedAttribute"
        android:textColor="@android:color/black"
        tools:background="@android:color/background_light"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_height="60dp"
        android:layout_width="300dp" />

    <TextView
        android:id="@+id/title"
        android:textSize="50sp"
        android:textAlignment="center"
        tools:ignore="UnusedAttribute"
        android:textColor="@android:color/black"
        tools:background="@android:color/black"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_height="60dp"
        android:layout_width="300dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/bt_scan"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_map"
        android:onClick="toQRScan"
        android:id="@+id/bt_scan" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/bt_map"
        android:background="@drawable/bt_map"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/title2"
        android:onClick="toMaps" />

</android.support.constraint.ConstraintLayout>
