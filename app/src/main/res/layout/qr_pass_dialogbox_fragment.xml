<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <TextView
        android:text="QR code scaned, type match with this app. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/qrpass_header_text"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:padding="15dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrpass_header_text"
        android:id="@+id/qrpass_desc_text"
        android:padding="10dp" />

    <Button
        android:id="@+id/qrpass_navigate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrpass_desc_text"
        android:padding="7dp"
        android:layout_margin="10dp"
        android:text="Navigate Me From Here"
        android:drawableLeft="@drawable/icon_navigatehere"
        android:background="@color/orange"/>

    <Button
        android:id="@+id/qrpass_close"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Close"
        android:background="@color/warm_e_gray"
        android:layout_below="@+id/qrpass_navigate"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp" />




</RelativeLayout>